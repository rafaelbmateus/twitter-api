source 'https://rubygems.org'

# Ruby on Rails
# Read more: https://github.com/rails/rails
gem 'rails', '4.2.5.1'

# Rails-api
# Read more https://github.com/rails-api/rails-api
gem 'rails-api'

# Database postgre
# Read more: https://github.com/ged/ruby-pg
# gem 'pg'

# Database sqlite3
# Read more: https://github.com/sparklemotion/sqlite3-ruby
gem 'sqlite3'

# Flexible authentication solution for Rails with Warden.
# Read more: https://github.com/plataformatec/devise
gem "devise"

# Serializers
# Read more https://github.com/rails-api/active_model_serializers
