# Gems development
group :development do
  # Spring
  # Read more https://github.com/rails/spring
  gem 'spring'

  # rspec
  # Read more: https://github.com/rspec/rspec-rails
  gem 'rspec-rails', '~> 3.0'

  # rubocop
  # Read more: https://github.com/bbatsov/rubocop
  gem 'rubocop', require: false
